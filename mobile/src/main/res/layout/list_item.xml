<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<RelativeLayout
    android:layout_height="108dp"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/news_description"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="NewsTittle"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_toRightOf="@id/news_description"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/news_date"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/news_title"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/news_title"
        android:layout_marginRight="8dp"
        android:text="19:05"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/news_title"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/news_title"
        android:src="@drawable/ic_touch_app_black_24dp" />
</RelativeLayout>


    <TextView
        android:id="@+id/news_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="News description"
        android:textSize="16sp" />

</LinearLayout>






<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_news_description"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/tv_news_description"
            android:layout_toRightOf="@id/tv_news_description"
            android:text="@string/NewsTitle"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/tv_news_title"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_news_title"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/NewsPubDate"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@+id/tv_news_title"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_news_title"
            android:src="@drawable/ic_touch_app_black_24dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_news_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NewsDescription"
        android:textSize="16sp" />
</LinearLayout>